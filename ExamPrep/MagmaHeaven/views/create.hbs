<section id="create-container">
    <div class="create-container-info">
        <h1>Create Volcano Wiki</h1>
        <form action="/create" method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="..." value="{{body.name}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{body.location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" placeholder="..." value="{{body.elevation}}">
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastEruption" placeholder="..." value="{{body.lastEruption}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{body.image}}">
            <label>Volcano Type:</label>
            <select id="type" name="typeVolcano">
                <option value="Supervolcanoes" {{#if (equal body.typeVolcano 'Supervolcanoes' )}}selected{{/if}}>Supervolcanoes</option>
                <option value="Submarine"{{#if (equal body.typeVolcano 'Submarine' )}}selected{{/if}}>Submarine</option>
                <option value="Subglacial"{{#if (equal body.typeVolcano 'Subglacial' )}}selected{{/if}}>Subglacial</option>
                <option value="Mud"{{#if (equal body.typeVolcano 'Mud' )}}selected{{/if}}>Mud</option>
                <option value="Stratovolcanoes"{{#if (equal body.typeVolcano 'Stratovolcanoes' )}}selected{{/if}}>Stratovolcanoes</option>
                <option value="Shield"{{#if (equal body.typeVolcano 'Shield' )}}selected{{/if}}>Shield</option>
            </select>
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{body.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>